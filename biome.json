{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"include": ["src/**/*.{ts,tsx,js,jsx}"],
		"ignore": ["node_modules", "dist"],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"bracketSpacing": true,
		"attributePosition": "auto",
		"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noExcessiveCognitiveComplexity": "error",
				"useArrowFunction": "error",
				"useOptionalChain": {
					"level": "error",
					"fix": "safe"
				},
				"useFlatMap": {
					"level": "error",
					"fix": "safe"
				},
				"noBannedTypes": {
					"level": "error",
					"fix": "safe"
				}
			},
			"recommended": true,
			"correctness": {
				"noConstAssign": {
					"level": "error",
					"fix": "safe"
				}
			},
			"nursery": {
				"useComponentExportOnlyModules": "error",
				"noSecrets": "error",
				"useGuardForIn": "error"
			},
			"style": {
				"noUselessElse": "error",
				"useFilenamingConvention": "error"
			},
			"suspicious": {
				"noConsoleLog": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
